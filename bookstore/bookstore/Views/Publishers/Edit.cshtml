@model bookstore.Models.Publisher

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>
<head>
    <title>Sửa thông tin nhà xuất bản</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/CSS/bootstrap.min.css"
          rel="stylesheet" />
    <script src="~/Content/JavaScript/bootstrap.bundle.min.js"></script>
    <script src="~/Content/JavaScript/kit.fontawesome..js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/CSS/create.css" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>Sửa thông tin nhà xuất bản</h4>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="info">
                <table>
                    <tr>
                        <td>@Html.HiddenFor(modal => modal.IdPub)</td>
                    </tr>
                    <tr>
                        <td>Tên Nhà xuất bản: </td>
                        <td>
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>Số điện thoại: </td>
                        <td>
                            @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>Địa chỉ: </td>
                        <td>
                            @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                </table>
                <div>
                    <input type="submit" value="Lưu" class="btn btn_add" />
                    <a href="@Url.Action("Index", "Categories")" class="btn btn_close"> Hủy</a>
                </div>
            </div>
        </div>
    }

</body>
</html>




