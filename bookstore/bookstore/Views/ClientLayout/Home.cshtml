@model IEnumerable<bookstore.Models.Book>

    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link href="~/Content/CSS/bootstrap.min.css"
              rel="stylesheet" />
        <script src="~/Content/JavaScript/bootstrap.bundle.min.js"></script>
        <script src="~/Content/JavaScript/kit.fontawesome..js" crossorigin="anonymous"></script>
        <link rel="stylesheet"
              href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

        <link rel="stylesheet" href="~/Content/CSS/home.css" />
        <style>
        </style>
        <title>Trang chủ</title>
        <style>
            .swiper-button-next,
            .swiper-button-prev {
                background-color: #eee;
                background-position: center;
                background-size: 30px;
                background-repeat: no-repeat;
                margin: 30px 20px;
                border-radius: 5px;
            }

                .swiper-button-next::after,
                .swiper-button-prev::after {
                    content: "";
                }
            .swiper-slide a {
                text-decoration: none;
                
            }
                .swiper-slide .tag-product a:hover {
                    background-color: #eee;
                }
            .swiper-slide a:hover .book{
                color: #00f;
            }
           
            .feat-icon{
                align-items: center;
                margin-left: 60px;
                width: 100px;
                height: auto;
                margin-bottom: 5px;
            }
            .featureBox h5{
                text-align: center;
            }
            .card-body{
                padding: 0;
            }
            .col-sm-2{
                padding-left: 5px;
                padding-right: 5px;
            }
        </style>
    </head>
    <body>
        <!-- Banner section start -->
        <section class="container-fluid">
            <div class="slideshow-container">
                <div class="mySlides time" >
                    <img src="~/Content/Images/banner1.jpg" style="width: 100%; height: 400px" />
                </div>

                <div class="mySlides time" >
                    <img src="~/Content/Images/banner2.png" style="width: 100%; height: 400px" />
                </div>

                <div class="mySlides time" >
                    <img src="~/Content/Images/banner3.png" style="width: 100%; height: 400px" />
                </div>

                <div class="position-dot">
                    <span class="dot" onclick="currentSlide(0)"></span>
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                </div>
            </div>


            <!-- Script -->
            <script>
                //khai báo biến slideIndex đại diện cho slide hiện tại
                var slideIndex;
                // KHai bào hàm hiển thị slide
                function showSlides() {
                    var i;
                    var slides = document.getElementsByClassName("mySlides");
                    var dots = document.getElementsByClassName("dot");
                    for (i = 0; i < slides.length; i++) {
                        slides[i].style.display = "none";
                    }
                    for (i = 0; i < dots.length; i++) {
                        dots[i].className = dots[i].className.replace(" active", "");
                    }

                    slides[slideIndex].style.display = "block";
                    dots[slideIndex].className += " active";
                    //chuyển đến slide tiếp theo
                    slideIndex++;
                    //nếu đang ở slide cuối cùng thì chuyển về slide đầu
                    if (slideIndex > slides.length - 1) {
                        slideIndex = 0;
                    }
                    //tự động chuyển đổi slide sau 5s
                    setTimeout(showSlides, 5000);
                }
                //mặc định hiển thị slide đầu tiên
                showSlides((slideIndex = 0));

                function currentSlide(n) {
                    showSlides((slideIndex = n));
                }
            </script>
        </section>
        <!-- Banner section end -->

        <!-- Featured Product start -->
        <section class="feat-product">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="sec-heading">
                            <h3 class="sec-title">
                                Sản phẩm mới
                            </h3>

                        </div>
                    </div>
                </div>
                <!-- Slide for new product -->
                @Html.Action("SachMoiPartial", "ClientLayout")
                
            </div>
        </section>
        <!-- Featured Product end -->
        <!-- Features section start -->
        <section class="features">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-6">
                        <div class="featureBox">
                            <img src="~/Content/Images/refund.png"
                                 alt="Cash"
                                 class="feat-icon" />
                            <h5>Đảm bảo hoàn tiền</h5>
                            <p>Hoàn tiền hoặc đổi hàng mới nếu bị hư hỏng do đơn vị vận chuyển.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="featureBox">
                            <img src="~/Content/Images/free-ship.png"
                                 alt="Delivery"
                                 class="feat-icon" />
                            <h5>Miễn phí giao hàng</h5>
                            <p>Đơn hàng sẽ được miễn phí vận chuyển khi đạt đơn giá nhất định.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="featureBox">
                            <img src="~/Content/Images/contact.png"
                                 alt="Support"
                                 class="feat-icon" />
                            <h5>Hỗ trợ mọi lúc mọi nơi</h5>
                            <p>Luôn phản hồi các câu hỏi của khách hàng trong khoảng thời gian ngắn nhất.</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="featureBox">
                            <img src="~/Content/Images/sercurity.png"
                                 alt="Secure payment"
                                 class="feat-icon" />
                            <h5>Bảo mật thanh toán</h5>
                            <p>Thông tin thanh toán của khách hàng được đảm bảo an toàn tuyệt đối.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Features section end -->
        <!--Trending Products start -->
        <section class="trending-products">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="sec-heading">
                            <h3 class="sec-title">Sản phẩm đề cử</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @{
                        var sl = 0;
                        foreach (var book in Model)
                        {
                            if (sl < 12)
                            {
                                <div class="col-sm-2 mb-2 product">
                                    <a href="@Url.Action("DetailProduct","ClientLayout", new {id = book.IdBook})">
                                        <div class="card rounded">
                                            <div class="pro_img">
                                                <img src="~/Content/Images/@book.image"
                                                        alt="" style="max-width: 100%; max-height: 100%; object-fit: contain"/>
                                            </div>
                                                
                                            <div class="card-body">
                                                <p class="book">@book.nameBook.Substring(0, 20)...</p>
                                                <p class="price">@book.price.GetValueOrDefault().ToString("N0") VND</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                sl++;
                            }

                        }
                    }


                   
                </div>
            </div>
        </section>
        <!--Trending Products end -->
    </body>
</html>

