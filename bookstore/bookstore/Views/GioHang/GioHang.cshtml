@using bookstore.Models;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double total = 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/CSS/bootstrap.min.css"
          rel="stylesheet" />
    <script src="~/Content/JavaScript/bootstrap.bundle.min.js"></script>

    <style>
        *{
            margin:0;
            padding: 0;
        }
        .container-fluid{
            margin-top: 50px;
            margin-bottom: 50px;
            padding-left: 60px;
        }
       
        .cart-area{
            width: 100%;
            margin-left: 20px;
            margin-top: 20px;
        }
        .tag-prd{
            width: 100%;
            height: 150px;
            border-top: 1px solid #bebebe;
        }
        .image{
            padding: 5px 0px;
            position:relative;
            float:left;
            width: 100px;
            height: 130px;
        }
        .info{
            position: relative;
            margin-top: 35px;
            margin-left:20px;
            float: left;
            font-size: 18px;
        }
        .info p .name{
            overflow: hidden;
        }
        .price{
            margin-left: 450px;
            color: #f00;
            font-size: 18px;
        }
        .sl{
            margin-top: -45px;
            margin-left: 30px;
            font-size: 17px;
        }
        .pay{
            background-color: #eee;
            border-radius: 10px;
            padding: 20px;
            float:left;
            width: 350px;
        }
        .text{
            font-size: 20px;
            text-transform: uppercase;
            
        }
        .total {
            color: #f00;
            font-size: 18px;
            margin-left: 200px;
            margin-top: -20px;
        }
        .line{
            border-bottom: 2px solid #ddd;
        }
        .order{
            margin-top: 20px;
            margin-left: 75px;
        }
        .btn-order{
            background-color: #09f;
            border: none;
            border-radius: 5px;
            color: #fff;
            padding: 6px 50px;
        }
            .btn-order:hover {
                background-color: #00f;
                box-shadow: 3px 3px 2px #c0c0c0;
            }
        
    </style>
    <title>Giỏ hàng</title>
    <style>
        
    </style>
</head>
<body>
    <div class="container-fluid">
        <h4>Giỏ hàng</h4>
        <div class="row">
            <div class="cart-area col-sm-8">
                @foreach (var item in Model)
                {
                    <div class="tag-prd">
                        <div class="image">
                            <img src="@Url.Content("~/Content/Images/"+item.sAnhBia)" width="90" height="90" />
                        </div>
                        <div class="info">
                            <p class="name">@item.sTenSach</p>

                            <p class="price">@String.Format("{0:0,0}", item.dDonGia) VND</p>
                            <p class="sl">
                                Số lượng: <strong>@item.iSoLuong</strong>

                            </p>
                        </div>
                    </div>
                   
                }
            </div>
            <div class="col-sm-3 ">
                <div class="pay">
                    <div class="line">
                        <p class="text">tổng cộng</p>
                        <p class="total">
                            @foreach (var item in Model)
                            {
                                total += item.ThanhTien;
                            }
                            @String.Format("{0:0,0}", total)
                        </p>
                    </div>
                    <div class="order">
                        @using (Html.BeginForm("DatHang", "GioHang"))
                        {
                            <input type="submit" value="Đặt hàng" class="btn-order" />
                        }
                    </div>
                </div>

            </div>
        </div>
       

    </div>

   
</body>
</html>